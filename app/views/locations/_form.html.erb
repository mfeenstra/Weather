<%= form_with(model: location, local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
        <% location.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, required: false %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, required: true %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state, required: false %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.text_field :country, placeholder: 'usa', required: true %>
  </div>

  <div class="field">
    <%= form.label :zipcode %>
    <%= form.text_field :zipcode, required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Submit" %>
  </div>
<% end %>
